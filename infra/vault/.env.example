# Configuration HashiCorp Vault
# Copiez ce fichier vers .env et ajustez les valeurs

# Mode d'exécution
# - "dev": Mode développement (auto-unseal, token root simple)
# - "prod": Mode production (unseal manuel, sécurité renforcée)
VAULT_MODE=-dev

# Adresse du serveur Vault
VAULT_ADDR=http://localhost:8200

# Token d'authentification
# En mode dev: dev-only-token
# En mode prod: Token généré à l'initialisation
VAULT_TOKEN=dev-only-token

# Niveau de log (trace, debug, info, warn, error)
VAULT_LOG_LEVEL=info

# Activer l'UI web intégrée
VAULT_UI=true

# Désactiver mlock (déconseillé en production)
# mlock() empêche le swap des secrets en RAM
VAULT_DISABLE_MLOCK=false

# Telemetry / Prometheus
VAULT_TELEMETRY_PROMETHEUS_RETENTION_TIME=30s

# TLS (Phase 6 - Sécurité Production)
# VAULT_TLS_DISABLE=0
# VAULT_TLS_CERT_FILE=/vault/certs/vault.crt
# VAULT_TLS_KEY_FILE=/vault/certs/vault.key
# VAULT_TLS_MIN_VERSION=tls12
