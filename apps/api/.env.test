# API E2E Tests - Environment Configuration

# API Base URL (local dev server)
API_BASE_URL=http://localhost:8787

# Admin API Key (for protected admin endpoints)
ADMIN_API_KEY=test-admin-key-123456789

# Standard API Key (for authenticated endpoints)
API_KEY=test-api-key-987654321

# Environment
ENVIRONMENT=test
NODE_ENV=test

# Rate Limiting (relaxed for tests, can make many requests)
RATE_LIMIT_DEFAULT=10000
RATE_LIMIT_BURST=10000

# CORS Allowed Origins (whitelist for CORS tests)
ALLOWED_ORIGINS=https://app.cartae.io,http://localhost:3000,https://admin.cartae.io

# Database (if using real DB for E2E)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cartae_test

# Redis (if using real Redis for rate limiting)
REDIS_URL=redis://localhost:6379/1

# Cloudflare Workers specific (if testing locally with Wrangler)
WRANGLER_SEND_METRICS=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
