{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": [
    "packages/*/src/**/*",
    "packages/viz-plugins/*/src/**/*",
    "apps/*/src/**/*",
    "apps/*/scripts/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
