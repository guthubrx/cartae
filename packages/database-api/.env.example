# ============================================================================
# .env.example - Variables d'environnement Database API
# ============================================================================

# PostgreSQL Connection
DATABASE_URL=postgresql://cartae:changeme_in_production@localhost:5432/cartae

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=5000

# Server
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# HashiCorp Vault Integration (Session 78 - Phase 5)
# ============================================================================

# Enable Vault integration for secrets management
VAULT_ENABLED=false

# Vault server address (use Docker network name in production)
VAULT_ADDR=http://localhost:8200

# Vault app token (policy: cartae-app)
# Generate with: vault token create -policy=cartae-app
VAULT_TOKEN=hvs.xxxxxxxxxxxxxxxxxxxxxxxx

# Vault KV mount point (default: secret)
VAULT_MOUNT_POINT=secret

# Note: When VAULT_ENABLED=true, PostgreSQL credentials will be fetched from:
# - Secret path: database/postgres
# - Expected keys: username, password, host, port, database
#
# When VAULT_ENABLED=false, DATABASE_URL above will be used instead.
