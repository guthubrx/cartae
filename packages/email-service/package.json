{
  "name": "@cartae/email-service",
  "version": "1.0.0",
  "description": "Email service abstraction for Cartae notifications (Resend, SendGrid, SES, Console)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsup src/index.ts --format esm",
    "dev": "tsc --watch & tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@cartae/core": "workspace:*",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "@types/handlebars": "^4.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "resend": "^3.0.0",
    "@sendgrid/mail": "^8.0.0",
    "@aws-sdk/client-ses": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "resend": {
      "optional": true
    },
    "@sendgrid/mail": {
      "optional": true
    },
    "@aws-sdk/client-ses": {
      "optional": true
    }
  }
}
